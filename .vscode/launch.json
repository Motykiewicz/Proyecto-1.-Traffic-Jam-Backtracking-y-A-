{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Abrir en Chrome (localhost:3000)",
      "url": "http://localhost:3000/",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "serve-3000",
      "serverReadyAction": {
        "pattern": "Available on:.*3000",
        "uriFormat": "http://localhost:3000",
        "action": "openExternally"
      }
    }
  ]
}
